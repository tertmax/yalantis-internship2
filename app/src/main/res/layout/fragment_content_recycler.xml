<LinearLayout
    android:id="@+id/content_recycler"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/fragment_recyclerview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/fragment_content_margins"
        android:layout_marginRight="@dimen/fragment_content_margins"
        android:layout_marginTop="@dimen/fragment_content_margins"
        android:overScrollMode="never"
        />
</LinearLayout>