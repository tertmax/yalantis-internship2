<LinearLayout
    android:id="@+id/content_listview"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ListView
        android:id="@android:id/list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/fragment_content_margins"
        android:layout_marginRight="@dimen/fragment_content_margins"
        android:layout_marginTop="@dimen/fragment_content_margins"
        android:divider="@android:color/transparent"
        android:dividerHeight="@dimen/fragment_content_margins"
        android:headerDividersEnabled="true"
        android:overScrollMode="never"
        android:scrollbars="none"
        />

</LinearLayout>